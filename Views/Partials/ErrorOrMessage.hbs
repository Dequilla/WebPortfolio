<div class="message-section">
    {{#if error}}
        <article class="message is-danger">
            <div class="message-header">
                <p>Error</p>
            </div>
            <div class="message-body">
                <p>{{error}}</p>
            </div>
        </article>
    {{/if}}
    {{#if message}}
        <article class="message is-success">
            <div class="message-header">
                <p>Message</p>
            </div>
            <div class="message-body">
                <p>{{message}}</p>
            </div>
        </article>
    {{/if}}
</div>