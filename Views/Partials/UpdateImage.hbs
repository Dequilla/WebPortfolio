<form style="margin-top: 10px; padding-top: 10px; border-top: 1px solid #b5b5b5;" class="container" action="/admin/images/update" method="POST" enctype="multipart/form-data">
    <p class="file-label">Change image:</p>
    <div class="field is-grouped">
        <input class="button is-hovered" type="file" name="image"/> 
        <input style="width: 30%;" class="input" type="number" name="imageID" placeholder="Image ID to replace"/> 
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <input class="button" type="submit" value="Upload Image"/>
    </div>
</form>
