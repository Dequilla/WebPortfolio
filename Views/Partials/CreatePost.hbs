<div class="post-container">
    <form class="post-element" method="POST" action="/admin/post/create">
        <div class="post-element">
            <label for="title">Post name:</label><input class="input" type="text" name="title"/>
        </div>
        <div class="post-element">
            <label for="body">Body:</label><textarea style="resize: vertical; height: 20em;" class="input" name="body"></textarea>
        </div>
        <div class="post-element">
            <label for="imageID">Image ID:</label><input class="input" type="number" name="imageID"/>
        </div>
        <div class="post-element">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <input class="input" type="submit"/>
        </div>
    </form>
</div>
